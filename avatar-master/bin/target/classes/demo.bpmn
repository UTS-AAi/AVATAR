  <process processType="Private" isExecutable="true" id="greeting.process" name="Hello World" >

    <!-- nodes -->
    <startEvent id="_1" name="StartProcess" />
    <scriptTask id="_2" name="Greeting" scriptFormat="http://www.java.com/java" >
      <script>
System.out.println("Welcome " + kcontext.getVariable("name"));
System.out.println("=============================");
System.out.println("Today is  " + new java.util.Date().toString());</script>
    </scriptTask>
    <endEvent id="_3" name="EndProcess" >
        <terminateEventDefinition />
    </endEvent>

